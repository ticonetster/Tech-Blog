<div class="post-wrapper">
    <div class="card border-secondary">
        <div class="card-header post-title-box">
            <p class="post-title">Sign Up</p>  
        </div>
        <div class="card-body">
            <form class="signup-form">
              <div class="form-group">
                <label for="username-signup">Username</label>
                <input type="text" class="form-control" id="username-signup" placeholder="Enter your username">
              </div>
              <div class="form-group">
                <label for="password-signup">Password</label>
                <input type="password" class="form-control" id="password-signup" placeholder="Enter your password">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-secondary login-button">Sign Up!</button>
              </div>
              
              <a href="/login" class="sign-up-link">Login instead</a>
            </form>
        </div>
    </div>
</div>
<!-- javascript file-->
<script src="/js/signup.js"></script>