<div class="post-wrapper">
    <div class="card border-secondary">
        <div class="card-header post-title-box">
            <p class="post-title">Edit Post</p>  
        </div>
        <div class="card-body">
            <form class="edit-post-form">
              <div class="form-group">
                <label for="post-title">Title</label>
                <input type="text" class="form-control" id="post-title" value="{{post.title}}">
              </div>
              <div class="form-group">
                <label for="post-content">Content</label>
                <input type="text" class="form-control" id="post-content"  value="{{post.content}}">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-secondary login-button">Update Post</button>
              </div>
              <div class="form-group">
                <button type="button" class="btn btn-secondary login-button" id="delete-post-btn">Delete</button>
              </div>
              </div>
            </form>
        </div>
    </div>
</div>
<!-- javascript file-->
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>